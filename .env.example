# Environment Variables for Universal Sacred Text Platform
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
LOG_LEVEL=INFO
PORT=5000

# AI Service API Keys (at least one is required for chat functionality)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Data Paths
DATA_PATH=data

# CORS Settings (add your frontend URLs)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5001

# Search Configuration
DEFAULT_FUZZY_THRESHOLD=70
MAX_SEARCH_RESULTS=1000
DEFAULT_PAGE_SIZE=10

# Chat Configuration
DEFAULT_AI_PROVIDER=openai  # openai, anthropic, or mock
CHAT_MODEL=gpt-3.5-turbo    # Model to use for chat
MAX_CONVERSATION_HISTORY=50  # Number of messages to keep in context